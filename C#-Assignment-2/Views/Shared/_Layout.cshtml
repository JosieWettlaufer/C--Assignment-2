<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Trip Log</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/C__Assignment_2.styles.css" asp-append-version="true" />
</head>

<body>
    

    <div class="container">
        <header class="pb-2">
            <h1 class="bg-secondary text-white p-4">My Trip Log</h1>

        @if (ViewData["Subhead"] != null && !string.IsNullOrEmpty(ViewData["Subhead"].ToString()))
        {
                <h2>@ViewData["Subhead"]</h2>
        }
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
