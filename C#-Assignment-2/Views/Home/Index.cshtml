@model List<Trip>

<!--Home page-->
<a asp-controller="Home" asp-action="AddNewTrip" class="fw-bold text-decoration-none">Add new trip</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Destination</th>
            <th>StartDate</th>
            <th>EndDate</th>
            <th>Accomodations</th>
            <th>Things To Do</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trip in Model) {
            <tr>
                <td>@trip.Destination</td>
                <td>@trip.StartDate</td>
                <td>@trip.EndDate</td>
                <!--Displays accommodation info, if no accomodation information, placeholder cell used instead-->
                @if (!string.IsNullOrEmpty(trip.Accommodation)) {
                    <td>@trip.Accommodation<br>
                        Phone: @trip.AccomodationPhone | 
                        Email: @trip.AccommodationEmail
                    </td>
                } else {
                    <td></td>
                }
                <td>@trip.ThingToDo1<br>
                    @trip.ThingToDo2<br>
                    @trip.ThingToDo3
                </td>
            </tr>
        }
    </tbody>
</table>
