@model Trip

<form asp-action="SaveTrip" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group pb-3">
        <input asp-for="ThingToDo1" class="form-control">
    </div>
    <div class="form-group pb-3">
        <input asp-for="ThingToDo2" class="form-control">
    </div>
    <div class="form-group pb-3">
        <input asp-for="ThingToDo3" class="form-control">
    </div>
    <input type="hidden" asp-for="TripId" />

    <!--Previous required form attributes-->
    <input type="hidden" asp-for="Destination" />
    <input type="hidden" asp-for="Accommodation" />
    <input type="hidden" asp-for="StartDate" />
    <input type="hidden" asp-for="EndDate" />
    <input type="hidden" asp-for="AccomodationPhone" />
    <input type="hidden" asp-for="AccommodationEmail" />

    <button type="submit" class="btn btn-dark">Save</button>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-outline-dark">Cancel</a>
</form>
