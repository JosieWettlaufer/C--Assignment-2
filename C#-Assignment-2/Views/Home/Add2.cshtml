@model Trip


<form asp-action="Add2" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="AccomodationPhone">Phone Number</label>
        <input asp-for="AccomodationPhone" class="form-control">
    </div>
    <div class="form-group pb-3">
        <label asp-for="AccommodationEmail">Email Address</label>
        <input asp-for="AccommodationEmail" class="form-control">
    </div>
    <input type="hidden" asp-for="TripId" />

    <!--Previous required form attributes-->
    <input type="hidden" asp-for="Destination" />
    <input type="hidden" asp-for="Accommodation" />
    <input type="hidden" asp-for="StartDate" />
    <input type="hidden" asp-for="EndDate" />

    <button type="submit" class="btn btn-dark">Next</button>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-outline-dark">Cancel</a>
</form>
